{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../packages/types/src/*"]
    },

    "types": ["node", "vitest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
